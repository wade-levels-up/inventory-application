<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <header class="flex-row-centred-50pxh">
        <h1><%= title %></h1>
    </header>
    <main>
        <% if (title === 'New Make') { %>
            <%- include('../partials/newManufacturerForm') %>
        <% } %>
        <% if (title === 'New Model') { %>
            <%- include('../partials/newModelForm') %>
        <% } %>
        <% if (locals.errors) { %>
            <ul class="errorList">
                <% errors.forEach((error) => { %>
                    <li class="error"><strong>Error:</strong> <%= error.msg %></li>
                  <% }) %>
            </ul>
        <% } %>
    </main>
    <nav class="returnHome">
        <a class="buttonLink" href="/"><button>Return Home</button></a>
    </nav>
    <%- include('../partials/footer') %>
</body>
</html>