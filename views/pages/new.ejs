<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1><%= title %></h1>
    <% if (locals.errors) { %>
        <ul>
            <% errors.forEach((error) => { %>
                <li>Error: <%= error.msg %></li>
              <% }) %>
        </ul>
    <% } %>
    <% if (title === 'New Manufacturer') { %>
        <%- include('../partials/newManufacturerForm') %>
    <% } %>
    <% if (title === 'New Model') { %>
        <%- include('../partials/newModelForm') %>
    <% } %>
    <a href="/">Return Home</a>
</body>
</html>